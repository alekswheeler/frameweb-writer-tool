import Person, Address from "./medical-core.fwt";

@view
Package HospitalStaff {
    Class Employee {
        employeeId: string,
        hireDate: string,
        salary: number,
        workAddress: Address,
    }
    
    @persistent
    Class Doctor {
        licenseNumber: string,
        specialization: string,
        yearsOfExperience: number,
    }
    
    @mapped
    Class Nurse {
        certificationLevel: string,
        department: string,
    }
    
    Class Administrator {
        accessLevel: string,
        department: string,
    }

    
    Inheritance {
        Doctor extends Employee
    }
    
    Inheritance {
        Nurse extends Person
    }
    
    Inheritance {
        Nurse -> Employee
    }
    
    Inheritance {
        Administrator -> Person
    }
    
    Inheritance {
        Administrator -> Employee
    }

	// Herança múltipla conceitual
}

